<h6 class="heading-small text-muted mb-1">Customer information</h6>
 <% @customer = get_customer_details(f.object) %>
<div class="pl-lg-4">
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label class="form-control-label">Customer name</label>
        <%= f.text_field :customer_name, class: "form-control form-control-alternative customerLookup", autofocus: true, value: @customer[:name] %>
        <%= f.hidden_field :customer_id, class: "customerId" %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label class="form-control-label">Contact number1</label>
        <%= f.text_field :contact_number1, class: "form-control form-control-alternative customerContactNumber1", value: @customer[:contact_number1]  %>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="form-group">
        <label class="form-control-label">Contact number2</label>
        <%= f.text_field :contact_number2, class: "form-control form-control-alternative customerContactNumber2", value: @customer[:contact_number2] %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label class="form-control-label">Address1</label>
        <%= f.text_area :address1, class: "form-control form-control-alternative customerAddress1", value: @customer[:address1] %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label class="form-control-label">Address2</label>
        <%= f.text_area :address2, class: "form-control form-control-alternative customerAddress2", value: @customer[:address2] %>
      </div>
    </div>
  </div>
</div>