<% unless errors.empty? %>
<script type="text/javascript">
  $(document).ready(function () {
    toastr.options = {
      "closeButton": true,
      "debug": true,
      "newestOnTop": true,
      "progressBar": false,
      "positionClass": "toast-top-right",
      "preventDuplicates": false,
      "onclick": null
      // "showDuration": "300",
      // "hideDuration": "5000",
      // "timeOut": "1500",
      // "extendedTimeOut": "500",
      // "showEasing": "swing",
      // "hideEasing": "linear",
      // "showMethod": "fadeIn",
      // "hideMethod": "fadeOut"
    }
    <% errors.each do |message| %>
      toastr["error"]('<%= message %>');
    <% end %>
  });
</script>
<% end %>
