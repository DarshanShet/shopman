        
<div class="card-body">
  <%= form_for(item, html: { autocomplete: "off" }) do |f| %>
    <%= f.hidden_field :qty_in_stock, value: f.object.present? && f.object.qty_in_stock.present? ? f.object.qty_in_stock : 0 %>
    <%= f.hidden_field :last_receiving_rate, value: f.object.present? && f.object.last_receiving_rate.present? ? f.object.last_receiving_rate : 0 %>

    <h6 class="heading-small text-muted mb-4">Item information</h6>
    <div class="pl-lg-4">
      <div class="row">
        <div class="col-lg-3">
          <div class="form-group">
            <label class="form-control-label">Code</label>
            <%= f.text_field :code,class: "form-control form-control-alternative", autofocus: true %>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Item name</label>
            <%= f.text_field :name, class: "form-control form-control-alternative" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <div class="form-group">
            <label class="form-control-label">Receiving uom</label>
            <%= f.select(:receiving_uom_id, uoms_for_select,{:prompt => 'Select'} , { class: "form form-group form-control" }) %>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-group">
            <label class="form-control-label">Conversion rate</label>
            <%= f.text_field :conversion_rate, class: "form-control form-control-alternative" %>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="form-group">
            <label class="form-control-label">Billing uom</label>
            <%= f.select(:billing_uom_id, uoms_for_select,{:prompt => 'Select'} , { class: "form form-group form-control" }) %>
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4" />
    <div class="text-left">
      <%= f.button "Save", type: "submit", class: "btn btn-success mt-2"  %>
    </div>
  <% end %>
</div>