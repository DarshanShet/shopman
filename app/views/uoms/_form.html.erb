        
<div class="card-body">
  <%= form_for(uom, html: { autocomplete: "off" }) do |f| %>

    <h6 class="heading-small text-muted mb-4">Uom information</h6>
    <div class="pl-lg-4">
      <div class="row">
        <div class="col-lg-3">
          <div class="form-group">
            <label class="form-control-label">Code</label>
            <%= f.text_field :code,class: "form-control form-control-alternative", autofocus: true %>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Uom name</label>
            <%= f.text_field :name, class: "form-control form-control-alternative" %>
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4" />
    <div class="text-left">
      <%= f.button "Save", type: "submit", class: "btn btn-success mt-2"  %>
    </div>
  <% end %>
</div>
