<div class="card-body">
  <%= form_for(shop, html: { autocomplete: "off" }) do |f| %>
    <div class="pl-lg-4">
      <div class="row">
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Shop name</label>
            <%= f.text_field :shop_name,class: "form-control form-control-alternative", autofocus: true %>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Shop address</label>
            <%= f.text_field :shop_address, class: "form-control form-control-alternative" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Shop mobile</label>
            <%= f.text_field :shop_mobile, class: "form-control form-control-alternative" %>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="form-group">
            <label class="form-control-label">Shop email</label>
            <%= f.text_field :shop_email, class: "form-control form-control-alternative" %>
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4" />
    <div class="text-left">
      <%= f.button "Save", type: "submit", class: "btn btn-success mt-2"  %>
    </div>
  <% end %>
</div>
